<div
  class='content-box border-4 px-4 m-1.5 rounded w-10/12 grid grid-cols-1 grid-rows-5 gap-4'
>
  <h2 class='col-span-full m-1.5 text-center text-4xl font-bold'>Event Details</h2>
  <form
    class='block col-span-full row-start-2 row-end-6 grid grid-cols-4 grid-rows-6'
    id='event-form'
  >
    {{! FIRST ROW }}
    <div
      class='row-start-1 row-span-1 col-start-1 col-span-1 grid justify-items-center'
    >
      <label class='font-bold'>Event Name:</label>
      <input
        class='m-1.5 w-10/12 text-center'
        type='text'
        id='event-name'
        data-id='{{event.id}}'
        data-user_id='{{user_id}}'
        value='{{event.name}}'
        required
      />
    </div>
    <div
      class='row-start-1 row-span-1 col-start-2 col-span-1 grid justify-items-center'
    >
      <label class='font-bold'>Event Type:</label>
      <input
        class='m-1.5 w-10/12 text-center'
        type='text'
        id='event-type'
        value='{{event.event_type}}'
      />
    </div>
    <div
      class='row-start-1 row-span-1 col-start-3 col-span-1 grid justify-items-center'
    >
      <label class='font-bold'>Event Date:</label>
      <input
        class='m-1.5 w-10/12 text-center'
        type='text'
        id='event-date'
        value='{{format_date event.event_date}}'
      />
    </div>
    <div
      class='row-start-1 row-span-1 col-start-4 col-span-1 grid justify-items-center'
    >
      <label class='font-bold'>Days Until Event:</label>
      <h2 class='m-1.5 w-10/12 text-center'>{{days_left event.event_date}}</h2>
    </div>
    {{! SECOND ROW }}
    <div
      class='row-start-2 row-span-1 col-start-1 col-span-4 grid justify-items-center'
    >
      <label class='font-bold'>Location Name:</label>
      <input
        class='m-1.5 w-10/12 text-center'
        type='text'
        id='event-loc-name'
        value='{{event.location_name}}'
      />
    </div>
    {{! THIRD ROW }}
    <div
      class='row-start-3 row-span-1 col-start-1 col-span-2 grid justify-items-center'
    >
      <label class='font-bold'>Location Address 1:</label>
      <input
        class='m-1.5 w-10/12 text-center'
        type='text'
        id='event-loc-addr1'
        value='{{event.location_addr1}}'
      />
    </div>
    <div
      class='row-start-3 row-span-1 col-start-3 col-span-2 grid justify-items-center'
    >
      <label class='font-bold'>Location Address 2:</label>
      <input
        class='m-1.5 w-10/12 text-center'
        type='text'
        id='event-loc-addr2'
        value='{{event.location_addr2}}'
      />
    </div>
    {{! FOURTH ROW }}
    <div
      class='row-start-4 row-span-1 col-start-1 col-span-1 grid justify-items-center'
    >
      <label class='font-bold'>Location City:</label>
      <input
        class='m-1.5 w-10/12 text-center'
        type='text'
        id='event-loc-city'
        value='{{event.location_city}}'
      />
    </div>
    <div
      class='row-start-4 row-span-1 col-start-2 col-span-1 grid justify-items-center'
    >
      <label class='font-bold'>Location State:</label>
      <input
        class='m-1.5 w-10/12 text-center'
        type='text'
        id='event-loc-state'
        value='{{event.location_state}}'
      />
    </div>
    <div
      class='row-start-4 row-span-1 col-start-3 col-span-1 grid justify-items-center'
    >
      <label class='font-bold'>Location Zip:</label>
      <input
        class='m-1.5 w-10/12 text-center'
        type='text'
        id='event-loc-zip'
        value='{{event.location_zip}}'
      />
    </div>
    <div
      class='row-start-4 row-span-1 col-start-4 col-span-1 grid justify-items-center'
    >
      <label class='font-bold'>Location Country:</label>
      <input
        class='m-1.5 w-10/12 text-center'
        type='text'
        id='event-loc-ctry'
        value='{{event.location_country}}'
      />
    </div>
    {{! FIFTH ROW }}
    <div
      class='row-start-5 row-span-1 col-start-1 col-span-4 grid justify-items-center'
    >
      <label class='font-bold'>Event Reference/links:</label>
      <input
        class='m-1.5 w-10/12 text-center'
        type='text'
        id='event-ref'
        value='{{event.event_reference}}'
      />
    </div>
    {{! SIXTH ROW }}
    <div class='row-start-6 row-span-1 col-start-1 col-span-4 px-4 rounded grid justify-items-stretch grid-col-3 auto-row-auto '>
    <button
      class='col-start-1 col-span-1 box-border border-2 px-4 rounded m-1.5 font-bold'
      type='button'
      value='update'
      id='event-update-btn'
    >Update</button>
    <button
      class='col-start-2 col-span-1 box-border border-2 px-4 rounded m-1.5 font-bold'
      type='button'
      value='delete'
      id='event-delete-btn'
    >Delete</button>
    <button
      class='col-start-3 col-span-1 box-border border-2 px-4 rounded m-1.5 font-bold'
      type='button'
      value='cancel'
      id='event-cancel-btn'
    >Cancel</button>
    </div>
  </form>
</div>

<script type='text/javascript' src='/js/eventDetails.js'></script>