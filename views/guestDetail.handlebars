<div class="content-box border-4 px-4 m-1.5 rounded w-10/12 grid grid-cols-1 grid-rows-5 gap-4">
    <h2 class="col-span-full m-1.5 text-center text-4xl font-bold">Guest Details</h2>
    <form class="block col-span-full row-start-2 row-end-6 grid grid-cols-4 grid-rows-6">
      {{!-- FIRST ROW --}}
      <div class="row-start-1 row-span-1 col-start-1 col-span-1 grid justify-items-center">
        <label class="font-bold">Guest Type:</label>
        <input class="m-1.5 w-10/12 text-center" type="text" id="guest-type" value="current type here"/>
      </div>
      <div class="row-start-1 row-span-1 col-start-2 col-span-3 grid grid-cols-2">
        <div class="col-start-1 col-span-1 grid justify-items-center">
          <label class="font-bold">Guest First Name:</label>
          <input class="m-1 w-10/12 text-center" type="text"  id="guest-first-name" value="current f-name here"/>
        </div>      
        <div class="col-start-2 col-span-1 grid justify-items-center">
          <label class="font-bold">Guest Last Name:</label>
          <input class="m-1 w-10/12 text-center" type="text"  id="guest-last-name" value="current l-name here"/>
        </div>
      </div>
      {{!-- SECOND ROW --}}
      <div class="row-start-2 row-span-1 col-start-1 col-span-2 grid justify-items-center">
        <label class="font-bold">Guest Address 1:</label>
        <input class="m-1.5 w-10/12 text-center" type="text" id="guest-addr1" value="current addr1 here"/>
      </div>
      <div class="row-start-2 row-span-1 col-start-3 col-span-2 grid justify-items-center">
        <label class="font-bold">Guest Address 2:</label>
        <input class="m-1.5 w-10/12 text-center" type="text" id="guest-addr2" value="current addr2 here"/>
      </div>  
      {{!-- THIRD ROW --}}
      <div class="row-start-3 row-span-1 col-start-1 col-span-1 grid justify-items-center">
        <label class="font-bold">Guest City:</label>
        <input class="m-1.5 w-10/12 text-center" type="text" id="guest-city" value="current city here"/>
      </div>
      <div class="row-start-3 row-span-1 col-start-2 col-span-1 grid justify-items-center">
        <label class="font-bold">Guest State:</label>
        <input class="m-1.5 w-10/12 text-center" type="text" id="guest-state" value="current state here"/>
      </div>      
      <div class="row-start-3 row-span-1 col-start-3 col-span-1 grid justify-items-center">
        <label class="font-bold">Guest Zip:</label>
        <input class="m-1.5 w-10/12 text-center" type="text" id="guest-zip" value="current zip here"/>
      </div>
      <div class="row-start-3 row-span-1 col-start-4 col-span-1 grid justify-items-center">
        <label class="font-bold">Guest Country:</label>
        <input class="m-1.5 w-10/12 text-center" type="text" id="guest-ctry" value="current ctry here"/>
      </div>    
      {{!-- FOURTH ROW --}}
      <div class="row-start-4 row-span-1 col-start-1 col-span-2 grid justify-items-center">
        <label class="font-bold">Guest Email:</label>
        <input class="m-1.5 w-10/12 text-center" type="text" id="guest-email" value="current email here"/>
      </div>
      <div class="row-start-4 row-span-1 col-start-3 col-span-2 grid justify-items-center">
        <label class="font-bold">Guest Phone:</label>
        <input class="m-1.5 w-10/12 text-center" type="text" id="guest-phone" value="current phone here"/>
      </div>
      {{!-- FIFTH ROW --}}
      <div class="row-start-5 row-span-1 col-start-1 col-span-2 grid justify-items-center">
        <div class="row-start-5 row-span-1 col-start-1 col-span-1 grid  justify-items-center">
          <label class="font-bold">Guest Response:</label>
          <input class="m-1.5 w-10/12 text-center" type="text"  id="guest-response" value="current response here"/>
        </div>
        <div class="row-start-5 row-span-1 col-start-2 col-span-1 grid  justify-items-center">
          <label class="font-bold">Sub Guest Of:</label>
          <input class="m-1.5 w-10/12 text-center" type="text"  id="guest-inviter" value="current inviter here"/>
        </div>
      </div>
      <div class="row-start-5 row-span-1 col-start-3 col-span-2 grid justify-items-right">
      {{!-- SHOULD REPEAT FOR # ITEMS ON EVENT --}}
      <div class="flex items-center">
        <label class="font-bold w-1/2 text-right">Item (n):</label>
        <input class="m-1.5 w-1/2 text-center" type="text" id="guest-items" value="current response here"/>
      </div>
      {{!-- END OF REPEAT --}}
      </div>
      {{!-- SIXTH ROW --}}
       <button class="row-start-6 row-span-1 col-start-1 col-span-2 box-border border-2 px-4 rounded m-1.5 font-bold" type="submit" id="guest-update-btn">Update</button>
       <button class="row-start-6 row-span-1 col-start-3 col-span-2 box-border border-2 px-4 rounded m-1.5 font-bold" type="submit" id="guest-delete-btn">Delete</button>
    </form>
</div>
