<div class='content-box border-4 px-4 m-1.5 rounded w-1/2 flex flex-col self-center'>
  <h2 class='m-1.5 text-center text-4xl font-bold'>Guest Details</h2>
  <form class='block grid grid-cols-2 grid-rows-14 m-1.5'>
    <label
      class='font-bold text-right col-start-1 col-span-1 row-start-1 row-span-1'
    >Guest Type:</label>
    <select
      class='m-1.5 w-10/12 text-center col-start-2 col-span-1 row-start-1 row-span-1'
      type='text'
      id='guest-type'
      data-id=''
      data-user_id='{{user_id}}'
      data-event_id='{{eventId}}'
      value=''>
        <option value='Primary'>Primary</option>
        <option value='Secondary'>Secondary</option>
    </select>
    <label
      class='font-bold text-right col-start-1 col-span-1 row-start-2 row-span-1'
    >Guest First Name:</label>
    <input
      class='m-1 w-10/12 text-center col-start-2 col-span-1 row-start-2 row-span-1'
      type='text'
      id='guest-first-name'
      value=''>
    <label
      class='font-bold text-right col-start-1 col-span-1 row-start-3 row-span-1'
    >Guest Last Name:</label>
    <input
      class='m-1 w-10/12 text-center col-start-2 col-span-1 row-start-3 row-span-1'
      type='text'
      id='guest-last-name'
      value=''>
    <label
      class='font-bold text-right col-start-1 col-span-1 row-start-4 row-span-1'
    >Guest Address 1:</label>
    <input
      class='m-1.5 w-10/12 text-center col-start-2 col-span-1 row-start-4 row-span-1'
      type='text'
      id='guest-addr1'
      value=''>
    <label
      class='font-bold text-right col-start-1 col-span-1 row-start-5 row-span-1'
    >Guest Address 2:</label>
    <input
      class='m-1.5 w-10/12 text-center col-start-2 col-span-1 row-start-5 row-span-1'
      type='text'
      id='guest-addr2'
      value=''>
    <label
      class='font-bold text-right col-start-1 col-span-1 row-start-6 row-span-1'
    >Guest City:</label>
    <input
      class='m-1.5 w-10/12 text-center col-start-2 col-span-1 row-start-6 row-span-1'
      type='text'
      id='guest-city'
      value=''>
    <label
      class='font-bold text-right col-start-1 col-span-1 row-start-7 row-span-1'
    >Guest State:</label>
    <input
      class='m-1.5 w-10/12 text-center col-start-2 col-span-1 row-start-7 row-span-1'
      type='text'
      id='guest-state'
      value=''>
    <label
      class='font-bold text-right col-start-1 col-span-1 row-start-8 row-span-1'
    >Guest Zip:</label>
    <input
      class='m-1.5 w-10/12 text-center col-start-2 col-span-1 row-start-8 row-span-1'
      type='text'
      id='guest-zip'
      value=''>
    <label
      class='font-bold text-right col-start-1 col-span-1 row-start-9 row-span-1'
    >Guest Country:</label>
    <input
      class='m-1.5 w-10/12 text-center col-start-2 col-span-1 row-start-9 row-span-1'
      type='text'
      id='guest-ctry'
      value=''>
    <label
      class='font-bold text-right col-start-1 col-span-1 row-start-10 row-span-1'
    >Guest Email:</label>
    <input
      class='m-1.5 w-10/12 text-center col-start-2 col-span-1 row-start-10 row-span-1'
      type='text'
      id='guest-email'
      value=''>
    <label
      class='font-bold text-right col-start-1 col-span-1 row-start-11 row-span-1'
    >Guest Phone:</label>
    <input
      class='m-1.5 w-10/12 text-center col-start-2 col-span-1 row-start-11 row-span-1'
      type='text'
      id='guest-phone'
      value=''>
    <label
      class='font-bold text-right col-start-1 col-span-1 row-start-12 row-span-1'
    >Guest Response:</label>
    <select
      class='m-1.5 w-10/12 text-center col-start-2 col-span-1 row-start-12 row-span-1'
      type='text'
      id='guest-response'
      value=''>
      <option value='none'>No Response</option>
      <option value='true'>Accepted</option>
      <option value='false'>Declined</option>
    </select>
    <label
      class='font-bold text-right col-start-1 col-span-1 row-start-13 row-span-1'
    >Sub Guest Of:</label>
    <select
      class='m-1.5 w-10/12 text-center col-start-2 col-span-1 row-start-13 row-span-1'
      type='text'
      id='guest-inviter'
      value=''>
    <option value=''></option>  
    {{#each guests}}
    <option value='{{this.id}}'>{{this.first_name}} {{this.last_name}}</option>
    {{/each}}
    </select>
    <div class='row-start-14 row-span-1 col-start-1 col-span-2 px-4 rounded grid justify-items-stretch grid-col-4 auto-row-auto '>
    <button
      class='col-start-1 col-span-1 box-border border-2 px-4 rounded m-1.5 font-bold'
      type='button'
      value='create'
      id='guest-create-btn'
    >Create</button>
    <button
      class='col-start-3 col-span-1 box-border border-2 px-4 rounded m-1.5 font-bold'
      type='button'
      value='cancel'
      id='guest-cancel-btn'
    >Cancel</button>
 
    </div>
  </form>

</div>

<button
      class='invisible'
      type='button'
      value='delete'
      id='guest-delete-btn'
    >Delete</button>
            <button
      class='invisible'
      type='button'
      value='update'
      id='guest-update-btn'
    >Update</button>

<script type='text/javascript' src='/js/guestDetails.js'></script>