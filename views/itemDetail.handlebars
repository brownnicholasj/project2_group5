<div class='content-box w-auto h-auto grid grid-cols-6 gap-1'>
    <h1 class="col-start-1 col-span-5 row-start-1 row-span-1 font-bold text-lg md:text-4xl text-center pb-5">{{items.[0].event.name}} Item Details</h1>
    <div class='col-start-1 col-span-5 row-start-2 bg-white row-span-1 grid grid-cols-5 auto-rows-auto justify-center content-center p-4 m-1.5 border-1 rounded-md shadow-md hover:shadow-xl'>
      <div class="col-start-1 col-span-1 font-bold">Category</div>
      <div class="col-start-2 col-span-1 font-bold">Name</div>
      <div class="col-start-3 col-span-1 font-bold">Quantity</div>
      <div class="col-start-4 col-span-1 font-bold">Unit of Measure</div>
      <div class="col-start-5 col-span-1 font-bold">Cost Per</div>
    {{#each items}}
      <a href="/items/{{this.id}}" class="col-start-1 col-span-1">{{this.category}}</a>
      <a href="/items/{{this.id}}" class="col-start-2 col-span-1">{{this.name}}</a>
      <a href="/items/{{this.id}}" class="col-start-3 col-span-1">{{this.quantity}}</a>
      <a href="/items/{{this.id}}" class="col-start-4 col-span-1">{{this.qty_uom}}</a>
      <a href="/items/{{this.id}}" class="col-start-5 col-span-1">${{this.cost_perunit}}</a>
    {{/each}}
    </div>
</div>

{{#if itemDetails.[0].selected}}
<div class='content-box w-auto h-auto grid grid-cols-6 gap-1'>
    <h1 class="col-start-1 col-span-5 row-start-1 row-span-1 font-bold text-lg md:text-4xl text-center pb-5 mt-4">{{items.[0].event.name}} Item Summary</h1>
    <div class='col-start-2 col-span-3 row-start-2 bg-white row-span-1 grid grid-cols-3 auto-rows-auto justify-center content-center p-4 m-1.5 border-1 rounded-md shadow-md hover:shadow-xl'>
      <div class="col-start-1 col-span-1 font-bold">Name</div>
      <div class="col-start-2 col-span-1 font-bold">Quantity</div>
      <div class="col-start-3 col-span-1 font-bold">Cost</div>
    {{#each itemDetails}}
      <div class="col-start-1 col-span-1">{{this.item.name}}</div>
      <div class="col-start-2 col-span-1">{{this.SumItemQty}}</div>
      <div class="col-start-3 col-span-1">${{this.total_cost}}</div>
    {{/each}}
    </div>
</div>
{{/if}}

  <br>
  <div class='content-box w-auto h-auto grid grid-cols-6 gap-1'>
  <div class="row-start-5 row-span-1 col-start-1 col-span-5 flex justify-center content-center">
  <a
    class='shadow-md py-1 px-1 md:py-2 px-4 font-semibold rounded-lg shadow-md text-white bg-green-500 hover:bg-green-700 m-1'
    href='/users/{{user_id}}/events/{{event_id}}/item'
    role='button'
  ><i class='fas fa-plus'> New Item</i></a>
  <a
    class='shadow-md py-1 px-1 md:py-2 px-4 font-semibold rounded-lg shadow-md text-white bg-green-500 hover:bg-green-700 m-1'
    href='/users/{{user_id}}/events/{{event_id}}'
    role='button'
  ><i class='fas fa-home'> Back</i></a>
</div>
</div>