<div class="content-box border-4 px-4 m-1.5 rounded w-10/12 grid grid-cols-1 grid-rows-4 gap-4">
    <h2 class="col-span-full m-1.5 text-center text-4xl font-bold">Item Details</h2>
    <form class="block col-span-full row-start-2 row-end-5 grid grid-cols-4 grid-rows-3">
      {{!-- FIRST ROW --}}
      <div class="row-start-1 row-span-1 col-start-1 col-span-2 grid justify-items-center">
        <label class="font-bold">Item Category:</label>
        <input class="m-1.5 w-10/12 text-center" type="text" id="item-category" value="current category here"/>
      </div>
      <div class="row-start-1 row-span-1 col-start-3 col-span-2 grid justify-items-center">
          <label class="font-bold">Item Name:</label>
          <input class="m-1 w-10/12 text-center" type="text"  id="item-name" value="current name here"/>
        </div>      
      {{!-- SECOND ROW --}}
      <div class="row-start-2 row-span-1 col-start-1 col-span-1 grid justify-items-center">
        <label class="font-bold">Quantity:</label>
        <input class="m-1.5 w-10/12 text-center" type="text" id="item-qty" value="current addr1 here"/>
      </div>
      <div class="row-start-2 row-span-1 col-start-2 col-span-1 grid justify-items-center">
        <label class="font-bold">Quantity Unit:</label>
        <h2 class="m-1.5 w-10/12 text-center" id="item-uom">UOM HERE</h2>
      </div>  
      <div class="row-start-2 row-span-1 col-start-3 col-span-1 grid justify-items-center">
        <label class="font-bold">Cost Per Unit:</label>
        <h2 class="m-1.5 w-10/12 text-center" id="item-uom">$$$ Here</h2>
      </div>  
    
      {{!-- THIRD ROW --}}
       <button class="row-start-3 row-span-1 col-start-1 col-span-2 box-border border-2 px-4 rounded m-1.5 font-bold" type="submit" id="item-update-btn">Update</button>
       <button class="row-start-3 row-span-1 col-start-3 col-span-2 box-border border-2 px-4 rounded m-1.5 font-bold" type="submit" id="item-delete-btn">Delete</button>
    </form>
</div>
