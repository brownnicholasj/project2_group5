<div class='content-box border-1 w-auto h-auto '>
  <h2 class='align-middle col-start-1 col-span-1 row-start-1 row-span-1 text-center text-lg md:text-4xl font-bold'>New Event Details</h2>
  <form id='event-form'
>
    {{! FIRST ROW }}
    <div class='flex flex-col justify-center content-center'>
        <label class='mx-0 my-1 font-bold text-sm md:text-lg font-bold text-center'>Event Name:</label>
        <input
          class='w-1/2 self-center'
          type='text'
          id='event-name'
          data-id=''
          data-user_id='{{user_id}}'
          value=''
          required
        />

        <label class='mx-0 my-1 font-bold text-sm md:text-lg font-bold text-center'>Event Type:</label>
        <input
          class='w-1/2 self-center'
          type='text'
          id='event-type'
          value=''
        />

        <label class='mx-0 my-1 font-bold text-sm md:text-lg font-bold text-center'>Event Date:</label>
        <input
          class='w-1/2 self-center'
          type='text'
          id='event-date'
          value=''
        />
    </div>

    {{! SECOND ROW }}
    <div class='flex flex-col justify-center content-center'>
      <label class='mx-0 my-1 font-bold text-sm md:text-lg font-bold text-center'>Location Name:</label>
      <input
        class='w-1/2 self-center'
        type='text'
        id='event-loc-name'
        value=''
      />
    </div>

    {{! THIRD ROW }}
    <div class='flex flex-col justify-center content-center'>
      <label class='mx-0 my-1 font-bold text-sm md:text-lg font-bold text-center'>Location Address 1:</label>
      <input
        class='w-1/2 self-center'
        type='text'
        id='event-loc-addr1'
        value=''
      />
    </div>

    <div class='flex flex-col justify-center content-center'>
      <label class='mx-0 my-1 font-bold text-sm md:text-lg font-bold text-center'>Location Address 2:</label>
      <input
        class='w-1/2 self-center'
        type='text'
        id='event-loc-addr2'
        value=''
      />
    </div>

    {{! FOURTH ROW }}
    <div class='flex flex-col justify-center content-center'>
      <label class='mx-0 my-1 font-bold text-sm md:text-lg font-bold text-center'>Location City:</label>
      <input
        class='w-1/2 self-center'
        type='text'
        id='event-loc-city'
        value=''
      />
    </div>

    <div class='flex flex-col justify-center content-center'>
      <label class='mx-0 my-1 font-bold text-sm md:text-lg font-bold text-center'>Location State:</label>
      <input
        class='w-1/2 self-center'
        type='text'
        id='event-loc-state'
        value=''
      />
    </div>

    <div class='flex flex-col justify-center content-center'>
      <label class='mx-0 my-1 font-bold text-sm md:text-lg font-bold text-center'>Location Zip:</label>
      <input
        class='w-1/2 self-center'
        type='text'
        id='event-loc-zip'
        value=''
      />
    </div>

    <div class='flex flex-col justify-center content-center'>
      <label class='mx-0 my-1 font-bold text-sm md:text-lg font-bold text-center'>Location Country:</label>
      <input
        class='w-1/2 self-center'
        type='text'
        id='event-loc-ctry'
        value=''
      />
    </div>

    {{! FIFTH ROW }}
    <div class='flex flex-col justify-center content-center'>
      <label class='mx-0 my-1 font-bold text-sm md:text-lg font-bold text-center'>Event Reference/links:</label>
      <input
        class='w-1/2 self-center'
        type='text'
        id='event-ref'
        value=''
      />
    </div>

    {{! SIXTH ROW }}
    <div class='flex flex-row justify-center content-center m-5'>
    <button
      class='col-start-1 col-span-1 box-border border-2 py-2 px-4 font-semibold rounded-lg shadow-md text-white bg-green-500 hover:bg-green-700'
      type='button'
      value='create'
      id='event-create-btn'
    >Create</button>
    <button
      class='col-start-3 col-span-1 box-border border-2 py-2 px-4 font-semibold rounded-lg shadow-md text-white bg-red-500 hover:bg-red-700'
      type='button'
      value='cancel'
      id='event-cancel-btn'
    >Cancel</button>
 
    </div>
  </form>

</div>

<button
      class='invisible'
      type='button'
      value='delete'
      id='event-delete-btn'
    >Delete</button>
            <button
      class='invisible'
      type='button'
      value='update'
      id='event-update-btn'
    >Update</button>

<script type='text/javascript' src='/js/eventDetails.js'></script>