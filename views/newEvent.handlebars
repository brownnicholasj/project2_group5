<div class='content-box w-auto h-auto mx-2 md:mx-10 lg:mx-auto'>
  <form id='event-form' class='px-1 my-3 mx-0 space-y-6'>
    <div>
      <h1 class='text-center text-md md:text-4xl font-semibold'>Event Details</h1>
      <p class='text-center text-sm md:text-md text-gray-600'>Add your event details</p>
    <div>

    <div class='flex space-x-2'>
      <div class='w-1/3 text-xs md:text-lg'>
      <label for='event-name'>Event Name</label>
      <input
        class='border border-gray-400 block py-1 px-4 w-full rounded-md focus:outline-none focus:border-blue-500'
        type='text'
        id='event-name'
        data-id=''
        data-user_id='{{user_id}}'
        value=''
        required
        />
      </div>
      <div class='w-1/3 text-xs md:text-lg'>
        <label for='event-type'>Event Type</label>
        <input
          class='border border-gray-400 block py-1 px-4 w-full rounded focus:outline-none focus:border-teal-500'
          type='text'
          id='event-type'
          value=''
        />
      </div>
      <div class='w-1/3 text-xs md:text-lg'>
        <label for='event-date'>Event Date</label>
        <input
          class='border border-gray-400 block py-1 px-4 w-full rounded focus:outline-none focus:border-teal-500'
          type='text'
          id='event-date'
          value=''
        />
      </div>
    </div>

    <div class='text-xs md:text-lg'>
      <label for='location-name'>Location Name</label>
      <input
        class='border border-gray-400 block py-1 px-4 w-full rounded focus:outline-none focus:border-teal-500'
        type='text'
        id='event-loc-name'
        value=''
      />
    </div>
    <div class='text-xs md:text-lg'>
      <label for='location-address1'>Location Address 1</label>
      <input
        class='border border-gray-400 block py-1 px-4 w-full rounded focus:outline-none focus:border-teal-500'
        type='text'
        id='event-loc-addr1'
        value=''
      />
    </div>
    <div class='text-xs md:text-lg'>
      <label for='locationb-adress2'>Location Address 2</label>
      <input
        class='border border-gray-400 block py-1 px-4 w-full rounded focus:outline-none focus:border-teal-500'
        type='text'
        id='event-loc-addr2'
        value=''
      />
    </div>


<div class='flex space-x-4 text-xs md:text-lg'>
  <div class='w-1/4'>
      <label for='location-city'>Location City</label>
      <input
        class='border border-gray-400 block py-1 px-4 w-full rounded focus:outline-none focus:border-teal-500'
        type='text'
        id='event-loc-city'
        value=''
      />
    </div>

    <div class='w-1/4 text-xs md:text-lg'>
      <label for='location-state'>Location State</label>
      <input
        class='border border-gray-400 block py-1 px-4 w-full rounded focus:outline-none focus:border-teal-500'
        type='text'
        id='event-loc-state'
        value=''
      />
    </div>

    <div class='w-1/4 text-xs md:text-lg'>
      <label for='location-zip'>Location Zip</label>
      <input
        class='border border-gray-400 block py-1 px-4 w-full rounded focus:outline-none focus:border-teal-500'
        type='text'
        id='event-loc-zip'
        value=''
      />
    </div>

    <div class='w-1/4 text-xs md:text-lg'>
      <label for='location-country'>Location Country</label>
      <input
        class='border border-gray-400 block py-1 px-4 w-full rounded focus:outline-none focus:border-teal-500'
        type='text'
        id='event-loc-ctry'
        value=''
      />
    </div>
  </div>
    
    <div class='text-xs md:text-lg'>
      <label for='event-reference'>Event Reference/links</label>
      <input
        class='border border-gray-400 block py-1 px-4 w-full rounded focus:outline-none focus:border-teal-500'
        type='text'
        id='event-ref'
        value=''
      />
    </div>

    <div class='flex flex-row justify-center content-center'>
      <button
        class='m-1 box-border border-2 py-2 px-4 font-semibold rounded-lg shadow-md text-white bg-green-500 hover:bg-green-700'
        type='button'
        value='create'
        id='event-create-btn'
      >Create</button>
      <button
        class='m-1 box-border border-2 py-2 px-4 font-semibold rounded-lg shadow-md text-white bg-red-500 hover:bg-red-700'
        type='button'
        value='cancel'
        id='event-cancel-btn'
      >Cancel</button>
    </div>
  </form>
</div>

<div class='flex flex-row justify-center content-center'>
  <button
      class='invisible'
      type='button'
      value='delete'
      id='event-delete-btn'
    >Delete</button>
            <button
      class='invisible'
      type='button'
      value='update'
      id='event-update-btn'
    >Update</button>
</div>
  
<script type='text/javascript' src='/js/eventDetails.js'></script>